{
  "name": "flowbuild-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tsc-alias -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts)\"",
    "test": "jest",
    "test:cov": "pnpm run test --coverage",
    "test:badges": "pnpm run test:cov  && jest-coverage-badges",
    "start": "node -r tsconfig-paths/register ./dist/src/server",
    "start:dev": "ts-node -r tsconfig-paths/register ./src/server.ts",
    "start:climem": "export CLIMEM=8999 && pnpm run build && node -r climem -r tsconfig-paths/register ./dist/src/server",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/auth": "^4.2.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/redis": "^6.1.0",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.3.0",
    "@fastify/websocket": "^7.1.2",
    "fastify": "^4.12.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "kafkajs": "^2.2.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "climem": "^1.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.0",
    "jest": "^29.4.2",
    "jest-coverage-badges": "^1.1.2",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  }
}